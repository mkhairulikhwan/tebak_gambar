<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#D7E4C0"
    android:padding="28dp"
    tools:context=".MainActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgviw_1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/anjing"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imgviw_2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/kucing"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgviw_3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/kelinci"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imgviw_4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/semut"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgviw_5"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/tikus"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imgviw_6"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="#7F27FF"
                android:padding="10dp"
                android:src="@drawable/ular"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
        